<h1>All Officers</h1>

<div class="d-flex flex-row-reverse">
  <%= paginate @officers, theme:'bootstrap-5'%>
</div>
<div class="row">
 <% @officers.each do |officer| %>
  <div class="col-sm-3">
    <div class="card h-100" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%=officer.name%></h5>
        <%= link_to "See officer details", officer, class: "btn btn-primary"%>
      </div>
    </div>
</div>
<%end%>
</div>